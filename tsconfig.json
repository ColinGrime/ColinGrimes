{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ESNext",
        "jsx": "react-jsx",
        "strict": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "noEmitOnError": true,
        "rootDir": ".",
        "outDir": "dist"
    },
    "include": ["src/**/*.tsx", "src/**/*.ts"]
}
